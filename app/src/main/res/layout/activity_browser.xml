<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface_color"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Navigation Buttons -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go forward"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_refresh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:layout_marginEnd="8dp" />

        <!-- Address Bar -->
        <EditText
            android:id="@+id/address_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:hint="Enter URL or search..."
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:padding="12dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:layout_marginEnd="8dp" />
            
        <!-- Desktop Browser Controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom:"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical" />
        
        <ImageButton
            android:id="@+id/btn_zoom_out"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/btn_dialog"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="âˆ’"
            android:textSize="18sp"
            android:textStyle="bold"
            android:contentDescription="Zoom Out"
            android:layout_marginEnd="4dp" />
            
        <TextView
            android:id="@+id/zoom_level"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="65%"
            android:textSize="11sp"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginEnd="4dp" />
        
        <ImageButton
            android:id="@+id/btn_zoom_in"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/btn_dialog"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="+"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="Zoom In"
            android:layout_marginEnd="8dp" />
            
        <ImageButton
            android:id="@+id/btn_desktop_mode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_desktop_browser"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Desktop Mode" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/accent_color" />

    <!-- WebView Container with Desktop Features -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true" />

        <!-- Desktop Browser Info Overlay -->
        <TextView
            android:id="@+id/desktop_mode_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ–¥ï¸ Advanced Desktop Mode"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:background="#80000000"
            android:padding="4dp"
            android:layout_gravity="bottom|start"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>