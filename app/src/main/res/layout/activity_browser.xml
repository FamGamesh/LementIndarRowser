<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Tab Management Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_show_url_stack"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Show Url Stack"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <HorizontalScrollView
            android:id="@+id/tabs_scroll_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/tabs_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_new_tab"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface_color"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- Navigation Buttons -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/feature_card_background"
            android:contentDescription="Go back"
            android:layout_marginEnd="4dp"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="@drawable/feature_card_background"
            android:contentDescription="Go forward"
            android:layout_marginEnd="4dp"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_refresh"
            android:background="@drawable/feature_card_background"
            android:contentDescription="Refresh"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <!-- Address Bar -->
        <EditText
            android:id="@+id/address_bar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:hint="Enter URL or search..."
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:padding="12dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="@drawable/feature_card_background"
            android:contentDescription="Home"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />
            
        <!-- Desktop Mode Button -->
        <ImageButton
            android:id="@+id/btn_desktop_mode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_desktop_browser"
            android:background="@drawable/feature_card_background"
            android:contentDescription="Toggle Desktop Mode"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Dynamic Zoom Controls (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/zoom_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginEnd="8dp" />
        
        <ImageButton
            android:id="@+id/btn_zoom_out"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="âˆ’"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:contentDescription="Zoom Out"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />
            
        <SeekBar
            android:id="@+id/zoom_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="150"
            android:progress="65"
            android:layout_marginHorizontal="8dp" />
            
        <TextView
            android:id="@+id/zoom_level"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="65%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginEnd="8dp" />
        
        <ImageButton
            android:id="@+id/btn_zoom_in"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:contentDescription="Zoom In"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/accent_color" />

    <!-- WebView Container -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true" />

        <!-- Desktop Browser Info Overlay -->
        <TextView
            android:id="@+id/desktop_mode_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ–¥ï¸ Advanced Desktop Mode"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:background="#80000000"
            android:padding="4dp"
            android:layout_gravity="bottom|start"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>