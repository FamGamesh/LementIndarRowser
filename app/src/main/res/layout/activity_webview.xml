<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Macro Recording Control Panel -->
    <LinearLayout
        android:id="@+id/macro_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/accent_color"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”´ Recording Macro"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Chronometer
            android:id="@+id/macro_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/stop_macro_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="STOP"
            android:textColor="@color/white"
            android:background="@drawable/stop_button_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- View Saved Files Button -->
    <Button
        android:id="@+id/view_saved_files_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ View Saved Macro Files"
        android:background="@color/secondary_text_color"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="14sp" />

    <!-- WebView Container for proper overlay positioning -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>