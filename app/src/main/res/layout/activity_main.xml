<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Header with Logo and Search Bar and Three Lines Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <!-- App Logo -->
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="25dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/url_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Enter URL or Search"
                        android:imeOptions="actionGo"
                        android:inputType="textUri"
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColorHint="#999999" />

                    <Button
                        android:id="@+id/browse_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Search"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:minWidth="80dp"
                        android:layout_marginEnd="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Three Lines Menu Button -->
            <Button
                android:id="@+id/btn_menu"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="â˜°"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:elevation="8dp" />

        </LinearLayout>

        <!-- Quick Access Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <GridLayout
            android:id="@+id/quick_access_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Refresh Tip Message -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFECB3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If any page doesn't render properly\nin desktop mode, simply refresh for\noptimal viewing experience"
                android:textSize="14sp"
                android:textColor="#E65100"
                android:textStyle="italic"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_refresh"
                android:drawablePadding="8dp"
                android:drawableTint="#FF9800" />

        </androidx.cardview.widget.CardView>

        <!-- Made By Section (Golden Box) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/golden_box_background"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/made_by_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>