<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="16sp"
                    android:textColor="#E3F2FD"
                    android:layout_marginTop="4dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

        </LinearLayout>

        <!-- URL Input Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter URL or Search"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/url_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionGo"
                        android:inputType="textUri"
                        android:background="@drawable/edittext_background"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/browse_button"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/search_button_text"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:minWidth="120dp"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Refresh Tip -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFECB3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refresh_tip"
                android:textSize="14sp"
                android:textColor="#E65100"
                android:textStyle="italic"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_refresh"
                android:drawablePadding="8dp"
                android:drawableTint="#FF9800" />

        </androidx.cardview.widget.CardView>

        <!-- Session Management Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_recent_session"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recent Session"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btn_open_last_session"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Open Last Session"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="History"
                android:drawableTop="@drawable/ic_history"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/text_primary"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btn_bookmarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bookmarks"
                android:drawableTop="@drawable/ic_bookmarks"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginHorizontal="6dp"
                android:textColor="@color/text_primary"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btn_downloads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Downloads"
                android:drawableTop="@drawable/ic_arrow_forward"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginHorizontal="6dp"
                android:textColor="@color/text_primary"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:drawableTop="@drawable/ic_settings"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginStart="6dp"
                android:textColor="@color/text_primary"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Quick Access Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <GridLayout
            android:id="@+id/quick_access_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Made By Section (Golden Box) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/golden_box_background"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/made_by_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>